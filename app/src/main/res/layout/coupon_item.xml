<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginEnd="12dp"
    android:background="@drawable/bg_coupon_banner"
    android:elevation="2dp">

    <!-- Background image -->
    <ImageView
        android:id="@+id/ivCouponBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        />

    <!-- Coupon Code Chip over image -->
    <LinearLayout
        android:id="@+id/codeContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_margin="12dp"
        android:orientation="horizontal"
        android:background="@drawable/coupon_tv"
        android:paddingHorizontal="12dp"
        android:paddingVertical="6dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvCouponCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DC100"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginEnd="6dp" />

        <ImageView
            android:id="@+id/ivCopy"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:tint="@android:color/white"
            android:contentDescription="Copy Code" />
    </LinearLayout>
</FrameLayout>
