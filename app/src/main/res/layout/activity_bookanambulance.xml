<?xml version="1.0" encoding="utf-8"?>
<layout>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".BookanambulanceActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_200">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_bookanambulance"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_arrow_left" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bookanamubulance"
                android:layout_marginStart="-50dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/white"
                android:textSize="18sp"/>


        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/customercaresupport"/>
        <TextView
            android:id="@+id/callView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:drawablePadding="10dp"
            android:fontFamily="@font/roboto_bold"
            android:drawableEnd="@drawable/ambulance_phone_icon"
            android:text="@string/book_ambulance_no"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            app:strokeColor="#ebebeb"
            app:cardBackgroundColor="@color/white"
            app:strokeWidth="1dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:padding="1dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/bookanambulancename"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/entername"
                    android:maxLength="30"
                    android:textColorHint="@color/black"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:layout_weight="1"
                    android:inputType="textCapSentences"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_gravity="center"
                    android:background="@null">

                </EditText>




            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            app:strokeColor="#ebebeb"
            app:cardBackgroundColor="@color/white"
            app:strokeWidth="1dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:padding="1dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/bookanambulancenumber"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/entermobile"
                    android:maxLength="9"
                    android:textColorHint="@color/black"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:layout_weight="1"
                    android:inputType="numberDecimal"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_gravity="center"
                    android:background="@null">

                </EditText>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            app:strokeColor="#ebebeb"
            app:cardBackgroundColor="@color/white"
            app:strokeWidth="1dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:padding="1dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/bookanambulancedescription"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/enterdescription"
                    android:textColorHint="@color/black"
                    android:textSize="14sp"
                    android:gravity="start"
                    android:singleLine="true"
                    android:layout_weight="1"
                    android:inputType="textCapSentences"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_gravity="center"
                    android:background="@null">

                </EditText>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/submitbookanambulance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/submit"
            android:layout_margin="20dp"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginTop="32dp"
            android:textColor="@color/white"
            app:backgroundTint="#4C61CC"
            android:fontFamily="@font/roboto_bold"
            android:background="@drawable/submit_btn_bg"/>

    </LinearLayout>


</LinearLayout>
</layout>
