<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp">
            <!-- Left: Doctor Image -->
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="140dp"
                android:background="@color/white"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="0dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="false">

                    <ImageView
                        android:id="@+id/imgDoctor"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:importantForAccessibility="no"
                        android:scaleType="centerCrop"
                        android:src="@drawable/docter_img" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tvAvailability"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/bg_available"
                    android:paddingStart="6dp"
                    android:paddingEnd="6dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:fontFamily="@font/jakartharegular"
                    android:text="Available Today"
                    android:textColor="#000000"
                    android:textSize="10sp" />
            </LinearLayout>




            <!-- Right: Details Column -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <TextView
                    android:id="@+id/tvDoctorName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dr. Pranoti Deshpande"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:fontFamily="@font/jakarthasemibold"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvSpecialization"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DERMATOLOGY"
                    android:fontFamily="@font/jakartharegular"
                    android:textColor="@color/green"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvHospitalName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/hospitalicon"
                        android:drawablePadding="5dp"
                        android:text="Continental Hospital"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:fontFamily="@font/jakartharegular"/>

                    <TextView
                        android:id="@+id/tvHospitalCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+2"
                        android:textColor="@android:color/black"
                        android:textSize="10sp"
                        android:layout_marginStart="6dp"
                        android:paddingStart="6dp"
                        android:paddingEnd="6dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:background="@drawable/bg_rounded_box"
                        android:fontFamily="@font/jakartharegular"/>
                </LinearLayout>



                <TextView
                    android:id="@+id/tvdesegnation"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"

                    android:fontFamily="@font/jakartharegular"
                    android:drawableStart="@drawable/ic_designation"
                    android:text="MBBS, MD (Dermatology)"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvlanguage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:drawableStart="@drawable/ic_langaue"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/jakartharegular"
                    android:textColor="@color/black"
                    android:textSize="14sp" />


                <LinearLayout
                    android:id="@+id/llTimings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="2dp">

                    <TextView
                        android:id="@+id/tvMorning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/morning"
                        android:fontFamily="@font/jakartharegular"
                        android:textSize="12sp"
                        android:textColor="#A0A0A0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" | "
                        android:textSize="12sp"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/tvAfternoon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Afternoon"
                        android:fontFamily="@font/jakartharegular"
                        android:textSize="14sp"
                        android:textColor="#A0A0A0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" | "
                        android:textSize="12sp"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/tvEvening"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Evening"
                        android:fontFamily="@font/jakartharegular"
                        android:textSize="12sp"
                        android:textColor="#A0A0A0" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
        <!-- Experience + Rating (Single Line) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp"
            android:layout_gravity="center"
            android:gravity="start">

            <TextView
                android:id="@+id/tvExperience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="05 Years Exp"
                android:textSize="12sp"
                android:fontFamily="@font/jakartharegular"
                android:layout_marginStart="5dp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tvRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:textSize="12sp"
                android:fontFamily="@font/jakartharegular"
                android:textColor="@android:color/black" />
        </LinearLayout>
        <!-- Full-Width Buttons Below -->
        <LinearLayout
            android:id="@+id/buttonContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_marginBottom="4dp">

            <!-- Book Online Consult -->
            <LinearLayout
                android:id="@+id/ll_onlineconsult"
                android:layout_width="0dp"
            android:layout_height="46dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:backgroundTint="#9FC44B"
            android:background="@drawable/button_background_green"
            android:padding="8dp"
            android:gravity="center_vertical"
            android:layout_marginEnd="5dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_bookonline"
                android:layout_marginEnd="6dp"
                app:tint="@android:color/white" />

            <TextView
                android:id="@+id/tvBookOnlineConsult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Book Online Consultation"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:layout_weight="1"
                android:fontFamily="@font/jakartharegular" />



            <TextView
                android:id="@+id/tvonlinefees"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹999/-"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:fontFamily="@font/jakartharegular" />
        </LinearLayout>

        <!-- Book Hospital Visit -->
        <LinearLayout
            android:id="@+id/ll_bookhospital"
            android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@drawable/button_background_green"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:backgroundTint="#62AA48">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/path"
            android:layout_marginEnd="6dp"
            app:tint="@android:color/white" />

        <TextView
            android:id="@+id/tvbookhospital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book Hospital Visit"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:layout_weight="1"
            android:fontFamily="@font/jakartharegular" />



        <TextView
            android:id="@+id/tvofflinefees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₹999/-"

            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:fontFamily="@font/jakartharegular" />
    </LinearLayout>
</LinearLayout>





    </LinearLayout>


</androidx.cardview.widget.CardView>

