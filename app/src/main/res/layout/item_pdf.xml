<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/pdf_item_background"
    android:gravity="center_vertical">

    <!-- PDF Icon -->
    <ImageView
        android:id="@+id/imgPdfIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_pdf"
        android:contentDescription="PDF icon"
        android:tint="@color/colorPrimary" />

    <!-- PDF File Name -->
    <TextView
        android:id="@+id/tvPdfName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="sample.pdf"
        android:textColor="#000000"
        android:textSize="16sp"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingStart="12dp"
        android:paddingEnd="12dp" />

    <!-- Remove Button -->
    <ImageView
        android:id="@+id/btnRemovePdf"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/close"
        android:background="@drawable/round_red_background"
        android:tint="@android:color/white"
        android:contentDescription="Remove PDF"
        android:padding="2dp" />
</LinearLayout>

