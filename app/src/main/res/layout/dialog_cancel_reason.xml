<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white"
   
    android:elevation="8dp"
    android:clipToPadding="false"
    android:backgroundTint="@android:color/white"
    android:gravity="center_horizontal">

    <!-- Close Button (Right Top Corner) -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dialogTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reason for Cancellation"
            android:textColor="#000000"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/jakarthabold"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/btnClose"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/close"
            android:contentDescription="Close"
            android:padding="4dp" />
    </RelativeLayout>

    <!-- Spinner for cancellation reason -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_bg">
        <Spinner
            android:layout_width="match_parent"
            android:id="@+id/spinnerComments"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:background="@android:color/transparent"
            android:layout_height="match_parent" />

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="8dp"
            android:src="@drawable/spinner_" />
    </FrameLayout>

    <!-- Other reason input -->
    <EditText
        android:id="@+id/etOtherComments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="100dp"
        android:hint="Reason enter here.."
        android:gravity="top|start"
        android:background="@drawable/edittext_bg"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:inputType="textMultiLine"
        android:maxLines="3"

        android:padding="10dp"
        android:layout_marginTop="10dp"
        />

    <!-- Submit Button -->
    <Button
        android:id="@+id/submitCancelBtn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:text="Submit"
        android:textColor="@android:color/white"
        android:backgroundTint="#4CAF50" />

</LinearLayout>
