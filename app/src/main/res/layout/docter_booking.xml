<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:flexbox="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/ll_toolbar"
        android:background="@drawable/bg_toolbar_gradient">
        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/ll_back"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/back_hospitalsList"
                    android:layout_width="15dp"
                    android:layout_marginTop="2dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_arrow_left" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:id="@+id/tv_Title"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/jakarthasemibold"
                    android:text="Doctor Appointment"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </LinearLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/ll_toolbar"
    xmlns:app="http://schemas.android.com/tools"
    android:padding="16dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- Doctor Info Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@color/white"
            app:cardCornerRadius="8dp"

            app:cardElevation="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginStart="2dp">

                    <!-- Left: Doctor Image -->
                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="140dp"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="2dp"
                            app:cardElevation="0dp"
                            app:cardPreventCornerOverlap="false"
                            app:cardUseCompatPadding="false">

                            <ImageView
                                android:id="@+id/imgDoctor"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/docter_img" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/tvamount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginBottom="4dp"
                            android:paddingStart="6dp"
                            android:paddingEnd="6dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:fontFamily="@font/jakarthabold"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <!-- Right: Details Column -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginBottom="2dp"
                        android:paddingStart="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/tvDoctorName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="@android:color/black"
                                android:textStyle="bold"
                                android:fontFamily="@font/jakarthasemibold"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:id="@+id/tv_mode"
                                android:fontFamily="@font/jakarthasemibold"
                                android:gravity="end"
                                android:layout_marginTop="5dp"
                                android:text="offline"
                                android:textColor="#64AB48"
                                android:textSize="16sp"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvSpecialization"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/jakartharegular"
                            android:textColor="@color/green"
                            android:textSize="14sp" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="5dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tvHospitalName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/hospitalicon"
                                android:drawablePadding="5dp"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"
                                android:fontFamily="@font/jakartharegular"/>

                        </LinearLayout>



                        <TextView
                            android:id="@+id/tvdesegnation"
                            android:layout_width="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content"
                            android:drawablePadding="5dp"
                            android:fontFamily="@font/jakartharegular"
                            android:drawableStart="@drawable/ic_designation"

                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvlanguage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:drawableStart="@drawable/ic_langaue"
                            android:drawablePadding="5dp"
                            android:fontFamily="@font/jakartharegular"
                            android:textColor="@color/black"
                            android:textSize="14sp" />


                    </LinearLayout>
                </LinearLayout>




            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll_continuebooking"
            android:orientation="vertical">
            <!-- Appointment Date & Booking For -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Appointment Date"
                    android:padding="12dp"
                    android:fontFamily="@font/jakarthabold"
                    android:textStyle="bold"
                    android:textColor="@color/black" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/appointment_for"
                    android:layout_gravity="center"
                    android:padding="12dp"
                    android:gravity="center"
                    android:fontFamily="@font/jakarthabold"
                    android:textStyle="bold"
                    android:textColor="@color/black" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:id="@+id/ll_addmemeber"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#65AB48"
                        android:text="Add"
                        android:drawablePadding="4dp"
                        android:focusable="true"
                        android:clickable="true"
                        android:fontFamily="@font/jakartharegular"/>

                    <ImageView
                        android:id="@+id/addButton"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginStart="5dp"
                        android:src="@drawable/add"
                        android:contentDescription="Add"
                        android:background="?attr/selectableItemBackgroundBorderless" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/dateTextView"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:hint="Select Date"
                    android:padding="12dp"
                    android:drawableEnd="@drawable/ic_baseline_calendar"
                    android:background="@drawable/edittext_bg"
                    android:textColor="#000000" />


                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="48dp"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/edittext_bg">
                    <Spinner
                        android:layout_width="match_parent"
                        android:id="@+id/bookingForSpinner"
                        android:paddingStart="2dp"
                        android:paddingEnd="2dp"
                        android:background="@android:color/transparent"
                        android:layout_height="match_parent" />

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/spinner_" />
                </FrameLayout>



            </LinearLayout>

            <!-- Slot Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:background="@drawable/slot_border_bg"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:id="@+id/tv_totalslot"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="50dp"
                        android:background="#CCCCCC" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/tv_availableslots"
                        android:textAlignment="center"
                        android:textColor="#4CAF50"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>


            <!-- Morning Slots -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Morning"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="24dp" />

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/morningLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                flexbox:alignItems="center"
                flexbox:justifyContent="flex_start"
                flexbox:flexWrap="wrap"
                android:layout_marginTop="8dp" />

            <!-- Afternoon Slots -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Afternoon"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="24dp" />

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/afternoonLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                flexbox:alignItems="center"
                flexbox:justifyContent="flex_start"
                flexbox:flexWrap="wrap"
                android:layout_marginTop="8dp" />

            <!-- Evening Slots -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Evening"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="24dp" />

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/eveningLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                flexbox:alignItems="center"
                flexbox:justifyContent="flex_start"
                flexbox:flexWrap="wrap"
                android:layout_marginTop="8dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll_slot"
            android:visibility="gone"
            android:orientation="vertical">
            <!-- Appointment Summary Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="false"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:padding="16dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:layout_margin="0.5dp"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Title -->
                    <TextView
                        android:text="@string/appointment_summary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <!-- Divider -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/blackdotteddash"/>

                    <!-- Summary rows -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="4dp">

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:fontFamily="@font/jakarthasemibold"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:text="Appointment Date:"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:id="@+id/tv_appoinmentddate"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:fontFamily="@font/jakartharegular"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="4dp">

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:textStyle="bold"
                            android:fontFamily="@font/jakarthasemibold"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:text="Slot :"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:fontFamily="@font/jakartharegular"
                            android:textColor="@color/black"
                            android:id="@+id/tv_slotime"
                            android:text="08:00 AM"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="4dp">

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:textStyle="bold"
                            android:fontFamily="@font/jakarthasemibold"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:text="Consultation Fee:"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:fontFamily="@font/jakartharegular"
                            android:textColor="@color/black"
                            android:id="@+id/tv_consultationfees" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_coupon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:paddingVertical="4dp"
                        android:paddingHorizontal="8dp">

                        <!-- Left side: Coupon info + close icon -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingEnd="16dp">

                            <!-- Coupon Code Label -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Coupon Discount: "
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:fontFamily="@font/jakarthasemibold" />

                            <!-- Row: Apply Code and Cross Icon -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginTop="2dp">

                                <TextView
                                    android:id="@+id/tv_applycode"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Apply Coupon"
                                    android:textSize="10sp"
                                    android:textStyle="bold"
                                    android:textColor="#65AB48"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:fontFamily="@font/jakarthasemibold" />

                                <ImageView
                                    android:id="@+id/ivClearCoupon"
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:src="@drawable/close"
                                    android:layout_marginStart="6dp"
                                    android:layout_marginTop="1dp"
                                    android:visibility="gone" />
                            </LinearLayout>
                        </LinearLayout>


                        <!-- Right side: Coupon value text -->
                        <TextView
                            android:id="@+id/tv_coupon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₹100 OFF"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:gravity="end"
                            android:fontFamily="@font/jakartharegular"
                            android:paddingStart="8dp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="4dp">

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content"
                            android:text="System Charges:"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:id="@+id/tv_systemcharges" />
                    </LinearLayout>
                    <!-- Divider -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/blackdotteddash"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="4dp">

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content"
                            android:text=" Total Payable:"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:id="@+id/tv_totalamount" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Pay Later / Pay Now Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="24dp"
                android:weightSum="2">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnPayLater"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Pay Later"
                    android:visibility="invisible"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_outline_green"
                    android:textSize="14sp"
                    android:layout_marginEnd="8dp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnPayNow"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Pay Now"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/btn_solid_green"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>
            <!-- Specializations Header -->
            <LinearLayout
                android:id="@+id/section_coupon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_specializations"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Coupons"
                    android:textStyle="bold"
                    android:textSize="21sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="5dp" />

                <TextView
                    android:id="@+id/tv_specilaization_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View all"
                    android:textColor="#2A9145"
                    android:textSize="14sp"
                    android:clickable="true"
                    android:gravity="end"
                    android:layout_marginEnd="5dp" />
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCoupons"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="16dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:clipToPadding="false"
                android:overScrollMode="never"
                android:orientation="horizontal"/>

        </LinearLayout>




    </LinearLayout>


</ScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnContinue"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:text="Continue"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
     android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_alignParentBottom="true"
        android:fontFamily="@font/jakartharegular"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#4CAF50"
        android:background="@drawable/btn_continue_bg" />
</RelativeLayout>
</layout>