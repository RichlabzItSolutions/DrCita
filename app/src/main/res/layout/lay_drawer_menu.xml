                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:hint="@string/contactus"
                android:layout_weight="1"
                android:maxLength="30"
                android:textColorHint="@color/black"
                android:textSize="14sp"
                android:singleLine="true"
                android:inputType="textCapSentences"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:background="@null">

            </TextView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                app:tint="@color/green"
                android:src="@drawable/ic_baseline_chevron_right_24">

            </ImageView>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="70dp"
        app:strokeColor="#ebebeb"
        app:cardBackgroundColor="@color/white"
        app:strokeWidth="1dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="2dp">

        <LinearLayout
            android:id="@+id/aboutusNav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/aboutus"/>
            <TextView
                android:id="@+id/aboutusTV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:hint="@string/aboutustitle"
                android:maxLength="30"
                android:layout_weight="1"
                android:textColorHint="@color/black"
                android:textSize="14sp"
                android:singleLine="true"
                android:inputType="textCapSentences"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:background="@null">

            </TextView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                app:tint="@color/green"
                android:src="@drawable/ic_baseline_chevron_right_24">

            </ImageView>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="70dp"
        android:visibility="gone"
        app:strokeColor="#ebebeb"
        app:cardBackgroundColor="@color/white"
        app:strokeWidth="1dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="2dp">

        <LinearLayout
            android:id="@+id/languagesNav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/language"/>
            <TextView
                android:id="@+id/languagesTV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:hint="@string/language"
                android:maxLength="30"
                android:layout_weight="1"
                android:textColorHint="@color/black"
                android:textSize="14sp"
                android:singleLine="true"
                android:inputType="textCapSentences"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:background="@null">

            </TextView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                app:tint="@color/green"
