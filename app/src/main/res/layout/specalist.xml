<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="4dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Top row: Doctor image + info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <ImageView
                android:id="@+id/imgDoctor"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:scaleType="centerCrop"
                android:layout_marginEnd="8dp"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtDoctorName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dr_pranoti_deshpande"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/txtSpeciality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DERMATOLOGY"
                    android:textSize="12sp"
                    android:textColor="#4CAF50"
                    android:layout_marginTop="2dp"/>

                <TextView
                    android:id="@+id/txtHospital"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Continental Hospital"
                    android:textSize="12sp"
                    android:textColor="#444444"
                    android:layout_marginTop="2dp"/>

                <TextView
                    android:id="@+id/txtLanguages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Telugu, Marathi, Kannada, English"
                    android:textSize="12sp"
                    android:textColor="#444444"/>

                <TextView
                    android:id="@+id/txtExperience"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="05 Years Exp.    Rating: 4.5/5"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:weightSum="2">

            <Button
                android:id="@+id/btnOnlineConsult"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Book Online Consultation"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_background"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnHospitalVisit"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Book Hospital visit â‚¹999/-"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_background" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
