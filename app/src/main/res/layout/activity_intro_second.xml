<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".IntroSecondActivity">
    <ImageView
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:layout_weight="1"
        android:layout_marginBottom="40dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic__3"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/secondintrocardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/cardbackground">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                tools:text="BOOK SPECIALISTS"
                android:layout_marginTop="35dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="26sp" />
            <Space
                android:layout_width="wrap_content"
                android:layout_height="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:layout_margin="16dp"
                android:gravity="center"
                tools:text="Caafisom service make easy to book an appointment general doctors."
                android:textColor="@color/white"
                android:textSize="14sp" />
            <Space
                android:layout_width="wrap_content"
                android:layout_height="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="26dp"
                android:weightSum="1"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_gravity="center">

                    <View
                        android:layout_width="10dp"
                        android:layout_height="6dp"
                        android:layout_gravity="center"
                        android:background="@drawable/viewbackground"
                        android:gravity="start">
                    </View>
                    <View
                        android:layout_width="40dp"
                        android:layout_height="6dp"
                        android:background="@drawable/viewbackground"
                        android:layout_marginStart="5dp"
                        android:layout_gravity="center"
                        android:gravity="start">
                    </View>
                    <View
                        android:layout_width="10dp"
                        android:layout_height="6dp"
                        android:layout_marginStart="5dp"
                        android:layout_gravity="center"
                        android:background="@drawable/viewbackground"
                        android:gravity="start">
                    </View>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="end">


                    <Button
                        android:id="@+id/secondintroskipBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_margin="1dp"
                        android:padding="1dp"
                        tools:text="Skip"
                        android:background="@drawable/button_background"
                        android:fontFamily="@font/roboto_bold"
                        android:textSize="15sp"
                        android:layout_gravity="end"/>
                </LinearLayout>

            </LinearLayout>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="20dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>