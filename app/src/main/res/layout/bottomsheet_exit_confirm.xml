<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:orientation="vertical"
    android:background="@drawable/bg_bottomsheet_rounded">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Discard Changes?"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:paddingBottom="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You have unsaved uploads. Do you really want to go back?"
        android:textSize="14sp"
        android:textColor="#555555"
        android:paddingBottom="16dp" />

    <Button
        android:id="@+id/btnConfirmExit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Yes, Go Back"
        android:backgroundTint="@color/red"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnCancelExit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/gray"
        android:textColor="@android:color/white" />
</LinearLayout>
