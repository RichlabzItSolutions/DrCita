<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        tools:context=".ContactusActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/purple_200">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/back_contactus"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_arrow_left" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/contactus"
                    android:layout_marginStart="-50dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/white"
                    android:textSize="18sp"/>


            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_margin="16dp"
                    android:layout_gravity="center"
                    android:src="@drawable/contact_us">
                </ImageView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hargeysa"
                        android:textColorHint="@color/black"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:fontFamily="@font/roboto"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="1dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:background="@drawable/region"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/somaliland"
                            android:textColorHint="@color/black"
                            android:textSize="14sp"
                            android:layout_weight="1"
                            android:maxLines="2"
                            android:textColor="@color/black"
                            android:fontFamily="@font/roboto"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_gravity="center"
                            android:background="@null">

                        </TextView>




                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mogadishu"
                        android:textColorHint="@color/black"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:fontFamily="@font/roboto"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="1dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:background="@drawable/region"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/somaliaMogadishu"
                            android:textColorHint="@color/black"
                            android:textSize="14sp"
                            android:layout_weight="1"
                            android:maxLines="2"
                            android:textColor="@color/black"
                            android:fontFamily="@font/roboto"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_gravity="center"
                            android:background="@null">

                        </TextView>




                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="1dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:background="@drawable/phoneicon"/>
                        <TextView
                            android:id="@+id/profileNav"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/info_caafisom_com"
                            android:maxLength="30"
                            android:textColorHint="@color/black"
                            android:textSize="14sp"
                            android:singleLine="true"
                            android:layout_weight="1"
                            android:inputType="textCapSentences"
                            android:textColor="@color/black"
                            android:fontFamily="@font/roboto"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_gravity="center"
                            android:background="@null">

                        </TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="1dp"
                        android:orientation="horizontal"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp">
                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:background="@drawable/phoneicon"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/book_ambulance_no"
                            android:maxLength="30"
                            android:textColorHint="@color/black"
                            android:textSize="14sp"
                            android:singleLine="true"
                            android:layout_weight="1"
                            android:inputType="textCapSentences"
                            android:textColor="@color/black"
                            android:fontFamily="@font/roboto"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_gravity="center"
                            android:background="@null">

                        </TextView>




                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:fontFamily="@font/roboto_bold"
                        android:text="@string/getintouch">

                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/feelfreetodropusalinebelow"
                        android:textColorHint="@color/black"
                        android:layout_marginBottom="10dp"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/roboto"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_gravity="center"
                        android:background="@null">

                    </TextView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="15dp"
                        app:strokeColor="#ebebeb"
                        app:cardBackgroundColor="@color/white"
                        app:strokeWidth="1dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:padding="1dp"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/subject"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:hint="@string/entersubject"
                                android:maxLength="30"
                                android:textColorHint="@color/black"
                                android:textSize="14sp"
                                android:singleLine="true"
                                android:layout_weight="1"
                                android:inputType="textCapSentences"
                                android:textColor="@color/black"
                                android:fontFamily="@font/roboto"
                                android:layout_marginStart="20dp"
                                android:layout_marginEnd="20dp"
                                android:layout_gravity="center"
                                android:background="@null">

                            </EditText>




                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="15dp"
                        app:strokeColor="#ebebeb"
                        app:cardBackgroundColor="@color/white"
                        app:strokeWidth="1dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="85dp"
                            android:padding="1dp"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/decription"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:hint="@string/enterdescription"
                                android:maxLength="30"
                                android:textColorHint="@color/black"
                                android:textSize="14sp"
                                android:gravity="start"
                                android:singleLine="true"
                                android:layout_weight="1"
                                android:inputType="textCapSentences"
                                android:textColor="@color/black"
                                android:fontFamily="@font/roboto"
                                android:layout_marginStart="20dp"
                                android:layout_marginEnd="20dp"
                                android:layout_gravity="center"
                                android:background="@null"/>

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/submitcontactus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/submit"
                    android:layout_margin="20dp"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_marginTop="32dp"
                    android:textColor="@color/white"
                    app:backgroundTint="#4C61CC"
                    android:fontFamily="@font/roboto_bold"
                    android:background="@drawable/submit_btn_bg"/>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</layout>
