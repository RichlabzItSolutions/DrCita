<?xml version="1.0" encoding="utf-8"?>
<layout>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            android:clipChildren="true"
            tools:context=".SignupActivity">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_margin="16dp"
                android:src="@drawable/dr_logo_with_name">
            </ImageView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_margin="16dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/updateprofile"
                    android:textSize="28sp"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/purple_200">

                </TextView>
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="70dp"
                    app:strokeColor="#ebebeb"
                    app:cardBackgroundColor="@color/white"
                    app:strokeWidth="1dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="1dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:background="@drawable/usericon"/>
                        <Spinner
                            android:id="@+id/profilegender"
                            android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                            android:theme="@style/ThemeOverlay.AppCompat.Light"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:tooltipText="@string/Gender"
                            android:textSize="14sp"
                            android:layout_weight="1"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:fontFamily="@font/roboto"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_gravity="center"
                            >

                        </Spinner>
                        <TextView
                            android:id="@+id/profilegenderdropdown"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:visibility="gone"
                            android:textColor="@color/black"
                            android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
                            android:layout_marginEnd="30dp"

                            />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="70dp"
                    app:strokeColor="#ebebeb"
                    app:cardBackgroundColor="@color/white"
                    app:strokeWidth="1dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="1dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:background="@drawable/language"/>

                        <Spinner
                            android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                            android:theme="@style/ThemeOverlay.AppCompat.Light"
                            android:id="@+id/profilelanguage"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:singleLine="true"
                            android:textSize="14sp"
                            android:layout_weight="1"
                            android:layout_marginStart="20dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:fontFamily="@font/roboto"
                            android:layout_gravity="center"
                            android:layout_marginEnd="20dp"
                           >

                        </Spinner>
                        <TextView
                            android:id="@+id/profilelanguagedropdown"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:visibility="gone"
                            android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
                            android:layout_marginEnd="30dp"

                            />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="70dp"
                    app:strokeColor="#ebebeb"
                    app:cardBackgroundColor="@color/white"
                    app:strokeWidth="1dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="1dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:background="@drawable/region"/>
                        <Spinner
                            android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                            android:theme="@style/ThemeOverlay.AppCompat.Light"
                            android:id="@+id/profileregion"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="14sp"
                            android:tooltipText="@string/region"
                            android:layout_weight="1"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:fontFamily="@font/roboto"
                            android:layout_marginStart="20dp"
                            android:layout_gravity="center"
                            android:layout_marginEnd="20dp"
                            >

                        </Spinner>
                        <TextView
                            android:id="@+id/profileregiondropdown"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:visibility="gone"
                            android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
                            android:layout_marginEnd="30dp"

                            />

                    </LinearLayout>




                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="70dp"
                    app:strokeColor="#ebebeb"
                    app:cardBackgroundColor="@color/white"
                    app:strokeWidth="1dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="1dp"
                        android:id="@+id/calendardate"
                        android:orientation="horizontal">


                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:background="@drawable/calanderdate"/>

                        <TextView
                            android:id="@+id/appotimentdate"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:datePickerMode="spinner"
                            android:hint="@string/dob"
                            android:paddingStart="5dp"
                            android:singleLine="true"
                            android:textSize="14sp"
                            android:inputType="textCapSentences"
                            android:maxLength="40"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:fontFamily="@font/roboto"
                            android:layout_marginStart="20dp"
                            android:gravity="center_vertical"
                            android:background="@null"/>

                    </LinearLayout>




                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/updateprofile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/updateprofile"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_marginTop="32dp"
                    android:textColor="@color/white"
                    app:backgroundTint="#4C61CC"
                    android:fontFamily="@font/roboto_bold"
                    android:background="@drawable/submit_btn_bg"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</ScrollView>
</layout>
