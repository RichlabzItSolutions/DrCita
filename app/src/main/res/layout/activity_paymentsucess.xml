<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">





    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:padding="24dp">


        <ImageView
            android:id="@+id/successIcon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="68dp"
            android:contentDescription="Success"
            android:src="@drawable/sucess"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvGreat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Great!"
            android:textSize="18sp"
            android:textStyle="normal"
            android:textColor="@color/green"
            app:layout_constraintTop_toBottomOf="@id/successIcon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Booking Successful -->
        <TextView
            android:id="@+id/tvSuccess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Booking Successful"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@id/tvGreat"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Booking Ref and Slot time -->
        <TextView
            android:id="@+id/tvDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Booking Ref #: ACRAF23DB3C4\nSlot time      : 10.00AM - 10.30 AM"
            android:textSize="14sp"
            android:textColor="#555555"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvSuccess"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Back to Home (Outlined button) -->

        <LinearLayout
            android:id="@+id/viewreceiptBtn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:background="@drawable/submit_btn_bg"
            android:backgroundTint="#62AA48"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/tvDetails"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">



            <TextView
                android:id="@+id/textReceipt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Receipt"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/roboto_bold" />
            <ImageView
                android:id="@+id/iconReceipt"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/recipt"
                android:layout_marginStart="5dp"
                android:contentDescription="Receipt Icon"
                app:tint="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnBackHome"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:background="@drawable/btn_outline_gray"
            android:backgroundTint="#F3F3F3"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/viewreceiptBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back to home"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:layout_marginStart="8dp" />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/home"
                android:contentDescription="Home Icon" />
        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>



</layout>
