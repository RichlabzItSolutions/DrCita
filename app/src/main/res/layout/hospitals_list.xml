<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:strokeColor="#ebebeb"
        app:cardBackgroundColor="@color/white"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="0dp"
                android:background="@color/white"
                android:layout_margin="5dp"
                app:cardCornerRadius="6dp">

                <ImageView
                    android:id="@+id/hospitallogo"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/hospitalbydefault" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/hospitalname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hospital Name"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/jakarthabold"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/txtSpecialization"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jakarthasemibold"
                    android:textSize="13sp"
                    android:textColor="#64AB48"
                    android:text="Cardiology" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/location"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:id="@+id/txtLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:textSize="13sp"
                        android:fontFamily="@font/jakarthasemibold"
                        android:textColor="#000000" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnBook"
                    android:layout_width="wrap_content"
                    android:layout_height="46dp"
                    android:layout_gravity="end"
                    android:orientation="horizontal"
                    android:background="@drawable/button_background_green"
                    android:padding="8dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:backgroundTint="#62AA48">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_bookonline"
                        android:layout_marginEnd="6dp"
                        app:tint="@android:color/white" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="46dp"
                        android:text="@string/book_appointment"
                        android:textSize="12sp"
                       android:gravity="center"
                        android:textAllCaps="false"
                        android:drawablePadding="8dp"
                        android:layout_marginEnd="10dp"
                        android:backgroundTint="#62AA48"
                        android:textColor="#FFFFFF"
                        android:fontFamily="@font/jakartharegular"
                        android:contentDescription="Book Appointment Button" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
