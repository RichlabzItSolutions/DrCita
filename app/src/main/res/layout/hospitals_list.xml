<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:strokeColor="#ebebeb"
        app:cardBackgroundColor="@color/white"
        app:strokeWidth="1dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="0dp"
                android:layout_margin="2dp"
                app:cardCornerRadius="6dp">

                <ImageView
                    android:id="@+id/hospitallogo"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/hospitalbydefault" />
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/hospitalname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/jakarthabold"
                    tools:text="Motherhood hospital"
                    tools:ignore="MissingConstraints"
                    />
                <TextView
                    android:id="@+id/txtSpecialization"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Multi-Speciality"
                    android:fontFamily="@font/jakarthasemibold"
                    android:textSize="13sp"
                    android:textColor="#64AB48" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_marginTop="2dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/location"/>
                    <TextView
                        android:id="@+id/txtLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:textSize="13sp"
                        android:fontFamily="@font/jakarthasemibold"
                        android:text="Hyderabad, 500081"
                        android:textColor="#000000" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnBook"
                    android:layout_width="wrap_content"
                    android:layout_height="46dp"
                    android:text="@string/book_appointment"
                    android:textSize="12sp"
                    android:drawableStart="@drawable/location"
                    android:drawablePadding="8dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="#62AA48"
                    android:textColor="#FFFFFF"
                    android:contentDescription="Book Appointment Button" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/ratingTV"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="14sp"
                        android:visibility="gone"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:fontFamily="@font/roboto_medium"
                        tools:text="4"/>
                    <ImageView
                        android:id="@+id/rating"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="16dp"
                        android:theme="@style/RatingBar"
                        android:layout_height="16dp"
                        android:visibility="gone"
                        android:backgroundTint="@color/red"
                        android:src="@drawable/ic_baseline_star_rate_24"
                        android:numStars="5"
                        android:rating="3"/>

                    <TextView
                        android:id="@+id/free"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:visibility="gone"
                        android:layout_marginStart="10dp"
                        android:padding="5dp"
                        android:background="@drawable/lightgreenbutton"
                        android:textColor="@color/purple_200"
                        android:fontFamily="@font/roboto_medium"
                        android:text="@string/free"/>


                    <TextView
                        android:id="@+id/ratingcount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#A4A9AF"
                        android:visibility="invisible"
                        android:drawablePadding="20dp"
                        android:layout_marginStart="20dp"
                        android:drawableStart="@drawable/ic_user_3_line__1_"
                        tools:text="(2.1)"/>
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:id="@+id/ratingedit"
    android:layout_height="wrap_content">
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textColor="#A4A9AF"
        android:drawableEnd="@drawable/ic_edit_2_line"
        />
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#A4A9AF"
        android:layout_marginStart="5dp"
        android:text="Write a Review"
        android:textSize="12dp"

        />

</LinearLayout>



                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:layout_margin="2dp"
                    android:visibility="gone"
                    android:background="#45868686"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_weight="1"
                        android:textColor="@color/purple_200"
                        android:fontFamily="@font/roboto_medium"
                        android:text="@string/openinghours"/>

                    <TextView
                        android:id="@+id/location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_weight="1"
                        android:textColor="@color/purple_200"
                        android:fontFamily="@font/roboto_medium"
                        app:drawableStartCompat="@drawable/ic_map_pin_line"
                        tools:text="Hyderabad"/>



                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>


</LinearLayout>
